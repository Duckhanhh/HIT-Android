<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExpenseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/etDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:background="#B1FF7070"
                    android:text="18/5/2024"
                    android:paddingHorizontal="10dp"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Nhập ghi chú" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền chi"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="0 đ"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="19dp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:paddingTop="8dp"
        android:rowCount="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_food"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_food" />

            <TextView
                android:id="@+id/category_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ăn uống" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_house_ware"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_house_ware" />

            <TextView
                android:id="@+id/category_house_ware"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiêu hàng" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_clothes"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_clothes" />

            <TextView
                android:id="@+id/category_clothes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quần áo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_exchange"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_exchange" />

            <TextView
                android:id="@+id/category_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phí giao lưu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_medical"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_medical" />

            <TextView
                android:id="@+id/category_medical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y tế" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_education"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_education" />

            <TextView
                android:id="@+id/category_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Học tập" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_transport"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_transport" />

            <TextView
                android:id="@+id/category_transport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đi lại" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_contact"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_contact" />

            <TextView
                android:id="@+id/category_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liên lạc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_electric_bill"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_electric_bill" />

            <TextView
                android:id="@+id/category_electric_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền điện, nhà" />
        </LinearLayout>
    </GridLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Lưu khoản thu/chi" />

</LinearLayout>